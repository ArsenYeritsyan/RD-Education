create table course (
       id binary(255) not null,
        name varchar(255) not null,
        faculty_id binary(255) not null,
        primary key (id)
    ) ;

    create table faculty (
       id binary(255) not null,
        faculty_name varchar(255) not null,
        primary key (id)
    ) ;

    create table grade (
       id binary(255) not null,
        grade decimal(19,2),
        course_id binary(255),
        professor_id binary(255),
        student_id binary(255) not null,
        primary key (id)
    ) ;

    create table professor (
       id binary(255) not null,
        email varchar(255),
        first_name varchar(255) not null,
        last_name varchar(255) not null,
        password varchar(255) not null,
        picture_id varchar(255),
        faculty_id binary(255) not null,
        primary key (id)
    ) ;

    create table student (
       id binary(255) not null,
        email varchar(255),
        first_name varchar(255) not null,
        groop varchar(255),
        last_name varchar(255) not null,
        password varchar(255) not null,
        start_date date not null,
        faculty_id binary(255) not null,
        primary key (id)
    ) ;

    alter table course
